{
    "manifest_version": 3,
    "name": "Axis AutoLogin extension v3",
    "description": "AutoLogin to axis portal when connected to vpn",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "login extension",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [
        {
            "js": [
                "loginPage.js"
            ],
            "matches": [
                "https://vms.axisb.com:8443/login",
                "https://jira.axisb.com/login.jsp",
                "https://bitbucket.axisb.com/login"
            ]
        },
        {
            "js": [
                "homePage.js"
            ],
            "matches": [
                "https://vms.axisb.com:8443/"
            ]
        }
    ]
}